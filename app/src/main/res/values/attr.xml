<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="AnimationTextView">
        <attr name="text_style" format="integer">
            <flag name="regular" value="1" />
            <flag name="bold" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ButtonProgressBar">
        <attr name="bgColor" format="color" />
        <attr name="progColor" format="color" />
        <attr name="textColor" format="color" />
        <attr name="textSize" format="dimension" />
        <attr name="text" format="string" />
        <attr name="type" format="enum">
            <enum name="determinate" value="0" />
            <enum name="indeterminate" value="1" />
        </attr>
    </declare-styleable>

</resources>